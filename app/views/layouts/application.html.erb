<!DOCTYPE html>
<html>
<head>
  <title>Slacker Newz</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>

        <a class="navbar-brand" href="/">Slacker Newz</a>

      </div>

      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li><%= yield(:navbar) %></li>
        </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if current_user %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Logged in as: <%= current_user.name %><span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Log out", log_out_path %></li>
          </li>
          <% else %>
          <li><%= link_to "Log In", log_in_path %></li>
            <% end %>
          </ul>
        </ul>
      </div>
    </div>
  </div>
</nav>

<div class="container">

  <%= flash[:alert] %>
  <%= flash[:notice] %>
  <%= yield %>
  <%= yield(:body) %>
</div>

</body>
</html>
